{
	"name": "portfolio",
	"version": "1.0.0",
	"description": "This is my first portfolio",
	"main": ".src/app.js",
	"type": "commonjs",
	"scripts": {
		"build": "npx tsc",
		"watch-ts": "tsc -w",
		"bundle": "npx browserify src/app.js -o dist/bundle.js",
		"watch": "npx concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\"",
		"start": "webpack serve --config webpack.config.ts --port 9000 ",
		"lint": "eslint . --ext .ts",
		"debug": "SET DEBUG=* && npm run start",
		"test": "mocha -r ts-node/register tests/**/*.test.ts",
		"coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
		"dev": "nodemon -L src/app.ts"
	},
	"author": "Mebarki Ahmed Imad Eddine",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.13.15",
		"@babel/plugin-syntax-top-level-await": "^7.14.5",
		"@babel/plugin-transform-runtime": "^7.15.0",
		"@babel/preset-env": "^7.13.15",
		"@babel/preset-react": "^7.13.13",
		"@babel/preset-typescript": "^7.13.0",
		"@babel/runtime": "^7.15.3",
		"@types/jquery": "^3.5.14",
		"@types/node": "^17.0.23",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"babel-loader": "^8.2.2",
		"css-loader": "^5.2.7",
		"eslint": "^8.12.0",
		"eslint-config-google": "^0.14.0",
		"extract-loader": "^5.1.0",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.3.1",
		"mini-css-extract-plugin": "^2.6.0",
		"postcss": "^8.4.12",
		"postcss-loader": "^6.2.1",
		"prettier": "2.6.1",
		"sass-loader": "^11.0.1",
		"style-loader": "^2.0.0",
		"typescript": "^4.6.3",
		"webpack": "^5.35.0",
		"webpack-cli": "^4.6.0",
		"webpack-dev-server": "^3.11.3",
		"webpack-merge": "^5.8.0"
	},
	"dependencies": {
		"jquery": "^3.6.0",
		"node-sass": "^6.0.1",
		"postcss-scss": "^4.0.3",
		"ts-node": "^10.7.0"
	}
}
